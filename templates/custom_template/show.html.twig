{% extends 'base.html.twig' %}

{% block title %}CustomTemplate{% endblock %}

{% block body %}
    <h1>CustomTemplate</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ custom_template.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ custom_template.name }}</td>
            </tr>
            <tr>
                <th>File_path</th>
                <td>{{ custom_template.filePath }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ custom_template.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ custom_template.createdAt ? custom_template.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ custom_template.updatedAt ? custom_template.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('custom_template_index') }}">back to list</a>

    <a href="{{ path('custom_template_edit', {'id': custom_template.id}) }}">edit</a>

    {{ include('custom_template/_delete_form.html.twig') }}
{% endblock %}
